<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
  <!-- 혜진 mapper 시작 -->
  <select id="selectOneMember" resultType="member">
  	select
  		*
  	from
  		member
  	where
  		${checkKeyword} = #{value}
  </select>
  
  <insert id="insertMember">
  	insert into 
  		member
  	values(
  		seq_member_no.nextval,
  		#{id},
  		#{name},
  		#{nickname},
  		#{password},
  		#{birthday},
  		#{email},
  		#{phone},
  		default,
  		default,
  		default,
  		default,
  		#{smsYn},
  		default,
  		null,
  		null
  	)
	<selectKey keyProperty="memberNo" resultType="_int" order="AFTER">
		select
			seq_member_no.currval
		from
			dual
	</selectKey>
  </insert>
  <!-- 혜진 mapper 끝 -->
  
  <!-- 지영 mapper 시작 -->
  <select id="findId" resultType="string">
  	select
  		id
  	from
  		member
  	where
  		name = #{name} and email = #{email}
  </select>
  
  <select id="selectOneMemberByIdEmail" resultType="member">
  	select
  		*
  	from
  		member
  	where
  		id = #{id} and email = #{email}
  </select>
  
  <update id="updateMemberPassword">
  	update 
	    member
	set
	    password = #{password}
	where
	    id = #{id} and email = #{email}
  </update>
  <!-- 지영 mapper 끝 -->
  
  <!-- 지원 mapper 시작 -->
  <update id="updateMemberProfile">
  	update 
	    member
	set
	    name = #{name},
  		nickname = #{nickname},
  		birthday = #{birthday},
  		email = #{email},
  		phone = #{phone},
  		pro_photo = #{proPhoto},
  		url = #{url},
  		intro = #{intro}
	where
	    id = #{id}
  </update>
  
  <select id="selectOneMemberById" resultMap="memberMap">
  	select
  		*
  	from
  		member m left join authorities a
	        on m.member_no = a.member_no
  	where
  		m.id = #{id}
  </select>
  <resultMap type="member" id="memberMap">
  	<id column="member_no" property="memberNo"/>
  	<result column="id" property="id"/>
	<result column="name" property="name"/>
	<result column="nickname" property="nickname"/>
	<result column="password" property="password"/>
	<result column="birthday" property="birthday"/>
	<result column="email" property="email"/>
	<result column="phone" property="phone"/>
	<result column="point" property="point"/>		
	<result column="enroll_date" property="enrollDate"/>
	<result column="pro_photo" property="proPhoto"/>
	<result column="black_yn" property="blackYn"/>
	<result column="sms_yn" property="smsYn"/>
	<result column="warning_count" property="warningCount"/>
	<result column="url" property="url"/>
	<result column="intro" property="intro"/>

	<collection 
		property="authorities" 
		ofType="org.springframework.security.core.authority.SimpleGrantedAuthority">
		<constructor>
			<arg column="authority" javaType="string"/>
		</constructor>
	</collection>		
  </resultMap>
  
  <select id="selectOneMemberByCheckKeyword" resultType="member">
  	select
  		*
  	from
  		member
  	where
  		${checkKeyword} = #{value} and id != #{id}
  </select>
  
  <delete id="memberWithdrawal">
  	delete
	  	from member
  	where
  		id = #{id}
  </delete>
  <!-- 지원 mapper 끝 -->
  
  <!-- 다현 -->
  <select id="selectOneMemberByMemberNo" resultType="member">
  	select
  		*
  	from 
  		member
  	where
  		member_no = #{memberNo}
  </select>
</mapper>